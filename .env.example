# AWS Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env file to git!

# AWS Credentials (from AWS Console → IAM → Users → Security Credentials)
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_DEFAULT_REGION=ap-southeast-1

# AWS Account Details
AWS_ACCOUNT_ID=123456789012

# Project Configuration
PROJECT_NAME=cloud-infra
ENVIRONMENT=dev

# SSH Key Path (local machine)
SSH_PRIVATE_KEY_PATH=~/.ssh/cloud-infra-key
SSH_PUBLIC_KEY_PATH=~/.ssh/cloud-infra-key.pub

# Terraform Backend (automatically filled by setup-backend script)
TF_STATE_BUCKET=cloud-infra-terraform-state-${AWS_ACCOUNT_ID}
TF_LOCK_TABLE=cloud-infra-lock

# Optional: Terraform Variables (can override tfvars)
# TF_VAR_instance_type=t2.micro
# TF_VAR_enable_monitoring=true
# TF_VAR_enable_bastion=false

# Optional: Ansible Configuration
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_INVENTORY=inventory/dev/hosts

# Optional: Enable verbose logging
# TF_LOG=DEBUG
# ANSIBLE_VERBOSITY=3
