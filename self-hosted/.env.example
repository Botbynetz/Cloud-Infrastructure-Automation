# Environment Configuration for Self-Hosted Cloud

# Domain Configuration
DOMAIN=univai.cloud
EMAIL=admin@univai.cloud

# Database Configuration
POSTGRES_DB=univai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!@#

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!@#

# API Configuration
JWT_SECRET=CHANGE_THIS_JWT_SECRET_789!@#_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=7d
NODE_ENV=production
PORT=3000

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxx

# Email Service (SendGrid or SMTP)
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@univai.cloud

# MinIO (S3-Compatible Storage)
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_ABC!@#
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=univai-storage

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_DEF!@#

# AWS Integration (for Terraform execution)
AWS_REGION=us-east-1
# Users will provide their own AWS credentials through the platform

# Security
ALLOWED_ORIGINS=https://univai.cloud,https://www.univai.cloud
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
