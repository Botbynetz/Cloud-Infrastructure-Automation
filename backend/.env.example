# Environment Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Frontend URL (update after deploying to GitHub Pages)
FRONTEND_URL=https://botbynetz.github.io

# Security - CRITICAL: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this
JWT_EXPIRY=24h

# Email Service (Resend.com for sending verification codes)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=CloudStack <noreply@resend.dev>

# reCAPTCHA v3 (for bot protection)
# Get keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Database (Optional - currently using file-based storage)
DATABASE_URL=postgresql://user:password@localhost:5432/cloudstack
REDIS_URL=redis://localhost:6379

# AWS Configuration (for backend Terraform execution)
# Note: These are YOUR credentials for managing deployments
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info

# Deployment Limits
MAX_CONCURRENT_DEPLOYMENTS=5
DEPLOYMENT_TIMEOUT=3600000

# Verification Code Expiry (milliseconds)
VERIFICATION_CODE_EXPIRY=900000