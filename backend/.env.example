# Environment Configuration
NODE_ENV=production
PORT=3000

# Frontend URL (update after deploying to GitHub Pages)
FRONTEND_URL=https://your-username.github.io/cloudstack-website

# Database (Heroku PostgreSQL addon will auto-populate)
DATABASE_URL=

# Redis (Heroku Redis addon will auto-populate)
REDIS_URL=

# AWS Configuration (for Terraform execution)
# Note: These are YOUR credentials for managing deployments, not customer credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-for-frontend-authentication

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Deployment Limits
MAX_CONCURRENT_DEPLOYMENTS=5
DEPLOYMENT_TIMEOUT=3600000

# Terraform
TERRAFORM_VERSION=1.6.0
TF_LOG=INFO